              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"provider\": \"google\",\n  \"provider_id\": \"google-user-id-123\",\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"profile_image\": \"https://example.com/image.jpg\"\n}"
